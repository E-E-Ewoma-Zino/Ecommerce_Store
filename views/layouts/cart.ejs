<%- include("../partials/_head") %>
    <%- include("../partials/_header") %>
        <%- include("../components/breadcrumb") %>




            <!--================Cart Area =================-->
            <section class="cart_area padding_top">
                <div class="container">
                    <div class="cart_inner">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Product</th>
                                        <th scope="col">Avaliable</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cart[0].product.forEach(item=> { %>
                                        <tr>
                                            <td>
                                                <div class="media">
                                                    <div class="d-flex">
                                                        <img class="product_img cart-img" src="<%= item.img[0].path %>"
                                                            alt="<%= item.name %>" />
                                                    </div>
                                                    <div class="media-body">
                                                        <p>
                                                            <%= item.name %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <h5>
                                                    <%= item.totalNo %>
                                                </h5>
                                            </td>
                                            <td>
                                                <h5 class="cart_price">$<%= item.price %>
                                                </h5>
                                            </td>
                                            <td>
                                                <div class="product_count my_product_counter">
                                                    <span class="input-number-decrement">
                                                        <i class="ti-angle-down"></i>
                                                    </span>
                                                    <input class="input-number cart_value" type="text"
                                                        value="1" min="0"
                                                        max="<%= item.totalNo %>" tabindex="-1">
                                                    <span class="input-number-increment">
                                                        <i class="ti-angle-up"></i>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <h5 class="cart_total">$<%= (Number(item.price.replace(/,/g, "")) * Number(item.amount)).toLocaleString(); %>
                                                </h5>
                                            </td>
                                            <td>
                                                <form action="/cart" method="POST">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="itemId" value="<%= item._id %>">
                                                    <button type="submit" class="delete">
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td>
                                                    <h5>Subtotal</h5>
                                                </td>
                                                <td>
                                                    <h5 id="subTotal">0</h5>
                                                </td>
                                            </tr>
                                </tbody>
                            </table>
                            <div class="checkout_btn_inner float-right">
                                <a class="btn_1" href="category">Continue Shopping</a>
                                <a class="btn_1 checkout_btn_1" href="checkout">Proceed to checkout</a>
                            </div>
                        </div>
                    </div>
            </section>
            <!--================End Cart Area =================-->


            <%- include("../components/best_seller") %>
                <%- include("../partials/_footer") %>
                    <%- include("../partials/_scripts") %>