                                                        <input type="text" class="form-control" id="zip" name="zip"
                                                            value="<%= user.zip %>" placeholder="Postcode/ZIP" />
                                                    </div>
                                                    <div class="col-md-12 form-group">
                                                        <label for="f-option3 message">Note:</label>
                                                        <textarea class="form-control" name="note" id="message" rows="1"
                                                            placeholder="Order Notes">Thank you!üòÅ</textarea>
                                                    </div>
                                                    <div class="col-md-12 form-group">
                                                        <input type="hidden" name="cartData" id="cartData">
                                                        <input type="checkbox" id="confirmForm" />
                                                        <label class="text-danger" for="f-option3"
                                                            style="color: green;"> Check if details in this form are
                                                            correct.</label>
                                                    </div>
                                                    <!-- this is the calculation for the variables -->
                                                    <% cart.item.forEach(item=> { %>
                                                        <% subTotal +=Number(item.product.price.replace(/,/g, "" )) *
                                                            Number(item.quantity); %>
                                                            <% }); %>
                                                                <% total=subTotal + shipping %>
                                                                    <!-- I will be sending this values to the server -->
                                                                    <input type="hidden" name="orderMethod"
                                                                        value="PayPal">
                                                                    <input type="hidden" name="total"
                                                                        value="<%= total %>">
                                                                    <input type="hidden" name="shipping"
                                                                        value="<%= shipping %>">
                                                                    <input type="hidden" name="subtotal"
                                                                        value="<%= subTotal %>">
                                                </form>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="order_box">
                                                    <h2>Your Order</h2>
                                                    <ul class="list">
                                                        <li>
                                                            <a href="#">Product
                                                                <span>Total</span>
                                                            </a>
                                                        </li>
                                                        <% cart.item.forEach(item=> { %>
                                                            <li>
                                                                <a href="#">
                                                                    <%= item.product.name %>
                                                                        <span class="middle">x <%= item.quantity %>
                                                                                </span>
                                                                        <span class="last">$<%=
                                                                                (Number(item.product.price.replace(/,/g, ""
                                                                                )) *
                                                                                Number(item.quantity)).toLocaleString();
                                                                                %></span>
                                                                </a>
                                                            </li>
                                                            <% }); %>
                                                    </ul>
                                                    <ul class="list list_2">
                                                        <li>
                                                            <a href="#">Subtotal
                                                                <span>$<%= (subTotal).toLocaleString() %>
                                                                </span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Shipping
                                                                <span>Flat rate: $<%= (shipping).toLocaleString() %>
                                                                </span>
                                                            </a>
                                                        </li>
                                                        <li>

                                                            <a href="#">Total
                                                                <span>$<%= (total).toLocaleString() %>
                                                                </span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                    <div class="payment_item">
                                                        <div class="radion_btn">
                                                            <input type="radio" id="f-option5" name="selector" />
                                                            <label for="f-option5">Check payments</label>
                                                            <div class="check"></div>
                                                        </div>
                                                        <p>
                                                            Please send a check to Store Name, Store Street,
                                                            Store Town,
                                                            Store State / County, Store Postcode.
                                                        </p>
                                                    </div>
                                                    <div class="payment_item active">
                                                        <div class="radion_btn">
                                                            <input type="radio" id="f-option6" name="selector" />
                                                            <label for="f-option6">Paypal </label>
                                                            <img src="img/product/single-product/card.jpg" alt="" />
                                                            <div class="check"></div>
                                                        </div>
                                                        <p>
                                                            Please send a check to Store Name, Store Street,
                                                            Store Town,
                                                            Store State / County, Store Postcode.
                                                        </p>
                                                    </div>
                                                    <div class="creat_account">
                                                        <input type="checkbox" id="f-option4" name="selector" />
                                                        <label for="f-option4">I‚Äôve read and accept the
                                                        </label>
                                                        <a href="#">terms & conditions*</a>
                                                    </div>
                                                    <a id="proceed" class="btn_3" href="#x" data-toggle="tooltip"
                                                        title="Make sure you confirm your details then check the box">Proceed
                                                        to Paypal</a>
                                                </div>
                                            </div>
                                            <% }else{ %>
                                                <div class="alert alert-success">
                                                    You are almost doneüòÄ. Your order is being prepared.
                                                    LogIn to continue...
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                    </div>
                </section>
                <!--================End Checkout Area =================-->


